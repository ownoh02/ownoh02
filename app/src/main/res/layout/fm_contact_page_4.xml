<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarcontact"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/drakblue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_contact"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/drakblue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_contact_phone_100"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ติดต่อ"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_gift"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/drakblue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_contact_mail_100"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="รับ-ส่งของ"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_people"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/drakblue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_transfer_within_a_station_100"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="รับ-ส่งคน"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_contractor"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/drakblue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_sharp_manage_accounts_100"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ผู้รับเหมา"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_vip"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/drakblue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_local_taxi_50"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIP"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_other"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/drakblue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_other_houses_100"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="อื่นๆ"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>

    </ScrollView>

</FrameLayout>